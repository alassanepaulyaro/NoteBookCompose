<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.NoteBookCompose.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background to black -->
        <item name="windowSplashScreenBackground">@color/dark_blue</item>
        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated drawable. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_book</item>
        <!-- Set the theme of the Activity that follows the splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.NoteBookCompose</item>
    </style>
</resources>